<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:shrinkColumns="*"
    android:background="@color/colorPrimaryDark"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:text="FX570VN_PLUS"
        android:textSize="50dp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        />
    <TextView
        android:id="@+id/text"
        android:layout_marginTop="50dp"
        android:layout_height="200dp"
        android:layout_width="500dp"
        android:textSize="40dp"
        android:background="@color/colorScreen"
        android:textColor="@color/colorPrimaryDark"
        />
    <TableRow>

        <Button
            android:textSize="30dp"
            android:id="@+id/num7"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="7"/>

        <Button
            android:textSize="30dp"
            android:id="@+id/num8"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="8"/>

        <Button
            android:textSize="30dp"
            android:id="@+id/num9"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="9"/>
        <Button
            android:textSize="30dp"
            android:id="@+id/del"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="DEL"/>
        <Button
            android:textSize="30dp"
            android:id="@+id/ac"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="AC"/>
    </TableRow>
    <TableRow>

        <Button
            android:textSize="30dp"
            android:id="@+id/num4"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="4"/>

        <Button
            android:textSize="30dp"
            android:id="@+id/num5"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="5"/>

        <Button
            android:textSize="30dp"
            android:id="@+id/num6"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="6"/>
        <Button
            android:textSize="30dp"
            android:id="@+id/mul"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="x"/>
        <Button
            android:textSize="30dp"
            android:id="@+id/div"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text=":"/>
    </TableRow>
    <TableRow>

        <Button
            android:textSize="30dp"
            android:id="@+id/num1"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="1"/>

        <Button
            android:textSize="30dp"
            android:id="@+id/num2"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="2"/>

        <Button
            android:textSize="30dp"
            android:id="@+id/num3"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="3"/>
        <Button
            android:textSize="30dp"
            android:id="@+id/add"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="+"/>
        <Button
            android:textSize="30dp"
            android:id="@+id/sub"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="-"/>
    </TableRow>
    <TableRow>

        <Button
            android:textSize="30dp"
            android:id="@+id/num0"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:text="0"/>

        <Button
            android:textSize="30dp"
            android:id="@+id/com"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="."/>

        <Button
            android:textSize="30dp"
            android:id="@+id/exp"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="Exp"/>
        <Button
            android:textSize="28dp"
            android:id="@+id/ans"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="Ans"/>
        <Button
            android:textSize="30dp"
            android:id="@+id/equal"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:text="="/>
    </TableRow>
    <ImageView
        android:src="@drawable/android"
        android:scaleType="fitCenter"
        />
</TableLayout>